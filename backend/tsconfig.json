{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["src/types/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "typeRoots": ["node_modules/@types", "src/types"],
  "exclude": ["node_modules"]
}
