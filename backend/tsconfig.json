{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["src/types/*"],
      "*": ["node_modules/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/types/**/*.d.ts", "src/utils/supabase/server.js", "src/constants/index.js", "src/services/electricity-usages/electricity-usage.actions.js", "src/utils/supabase/supabase-request-handler.js"],
  "typeRoots": ["node_modules/@types", "src/types"],
  "exclude": ["node_modules"]
}
